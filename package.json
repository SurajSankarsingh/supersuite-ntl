{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/app.css --minify",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css\" \"netlify dev\"",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/app.css --watch",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production netlify dev"
  },
  "dependencies": {
    "@netlify/functions": "^1.0.0",
    "@prisma/client": "^3.10.0",
    "@remix-run/netlify": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.1.1",
    "daisyui": "^2.2.2",
    "framer-motion": "^6.2.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "remix-auth": "^3.2.1",
    "remix-themes": "^1.1.4",
    "remix-validated-form": "^4.1.8",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@tailwindcss/typography": "^0.5.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.9.0",
    "postcss": "^8.4.7",
    "prisma": "^3.10.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
